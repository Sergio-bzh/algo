Exo-1
# Écrire un algorithme qui affiche tous les nombres pairs compris entre 1 et 100.

"Mon premier code filou tête en l'air corrigé "
for (i = 1; i <= 100; i+2)
{
    i = 2
    afficher(i)
}
= = = = = = = = "Mon code rectifié" = = = = = = = = = = 
for(i = 1; i <= 100; i++)
{
    if(i % 2 === 0)
    afficher(i)
}

Exo-2
# Écrire une fonction qui affiche les nombres deux chiffres passés en paramètre
# Exemple : afficheEntier(2, 7)
# Résultat : 2 3 4 5 6 7

fonction afficherPlageDeNb(nb1, nb2)" Penser à bien nommer les variables depart arrivee"
{
    if(nb1 < nb2)
    {
        variable iterateur = nb1
        while (iterateur <= nb2)
        {
            afficher(iterateur)
            iterateur ++
        }
    }
}

fonction afficheEntier(depart,arrivee)
{
    for (i=depart; i<arrivee; i++)
    {
        afficher(i)
    }
}

afficherPlageDeNb(3, 15)

Exo-3
# Écrire un algorithme qui recherche la valeur maximale dans un tableau de nombres.
# exemple de tableau :
# variable mesNombres = [2, 18,42,128,7,34]
# Votre algo doit afficher 128 qui est le plus grand entier du tableau

variable monTableauDeNb[3, 6, 2, 50, 16, 21, 36]


fonction chercherValMax(monTableauDeNb)
{
    variable lePlusGdNb = 0
    variable iterateur = 0
    while(iterateur < count(monTableauNb)) # faire la même chose avec une boucle for
    {
        if(monTableauDeNb[iterateur] > lePlusGdNb)
        {
            lePlusGdNb = monTableauDeNb[iterateur]
        }
        iterateur ++
    }
    retourner lePlusGdNb
}

chercherValMax(monTableauDeNb)

